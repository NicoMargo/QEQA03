<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Bienvenido al Quien Es Quien</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MiCSS.css" type="text/css" rel="stylesheet">
    <script src="~/Scripts/alertify.js"></script>
    <script src="~/Scripts/alertify.min.js"></script>
    <link href="~/Content/alertify.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/alertify.core.css" rel="stylesheet" />
    <link href="~/Content/alertify.default.css" rel="stylesheet" /> </head>
<body>
    <div class="navbar navbar-color navbar-fixed-top">
        <div class="container miNav">

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li> <a class="titulo" href="/Home/Index">Inicio</a> </li>

                    <li>@Html.ActionLink("Juego", "TypeGame", "Game")</li>
                    <li>@Html.ActionLink("¿Como jugar?", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="navbar-color">
        <div style="width: 100%;  height: 1px;"></div>   
         <div class="container miFooter">
             <div class="row">
                 <div class="col-md-2 col-md-offset-2">
                     <ul class="">
                         <li> <a class="titulo" href="/Home/Index">Inicio</a> </li>

                         <li>@Html.ActionLink("Juego", "TypeGame", "Game")</li>
                         <li>@Html.ActionLink("¿Como jugar?", "About", "Home")</li>
                     </ul>
                 </div>
                 <div class="col-md-2">
                     @if (Session["Usu"] == null)
                     {
                     <ul class="">

                         <li><a>Usuario:</a></li>
                         <li>@Html.ActionLink("Registrarse", "Register", "BackOffice", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                         <li>@Html.ActionLink("Iniciar Sesion", "LogIn", "BackOffice", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                     </ul>
                     }
                     else
                     {
                        <ul>
                            <li>@Ajax.ActionLink("Cerrar Sesion", "Logout", "Home", new AjaxOptions { HttpMethod = "POST" })</li>
                            <li>@Html.ActionLink("Configuracion", "ModificarUsu", "BackOffice", routeValues: null, htmlAttributes: new { id = "loginLink" }) </li>
                        </ul>
                     }
                 </div>
                 <div class="col-md-2">
                     <p style="color: white;">Desarollado por bitian SRL todos los derechos reservados © 2020-2022</p>
                 </div>
             </div>
                
             <div>
                 
             </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
