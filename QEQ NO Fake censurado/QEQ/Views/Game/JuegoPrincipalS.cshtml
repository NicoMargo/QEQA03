
@using QEQ.Models
@model QEQ.Models.Personaje
@{
    ViewBag.Title = "JuegoPrincipalS";
}

<script type="text/javascript">           
        alertify.alert('@ViewBag.msgalert');   
</script>

<div class="container" style="margin-top: 10rem;">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h2 class="panel-title"><b>Puntos: @BD.laPartida.Puntos</b> </h2>
        </div>
        <div class="panel-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 PregBox text-center">
                        @using (Html.BeginForm("AskS", "Game", FormMethod.Post))
                        {
                            <p style="margin-top: 4rem; font-size:1.6rem;"><b>Que desea preguntar?</b> </p><br />

                            @Html.DropDownList("idpreg", new SelectList(ViewBag.Preg, "Id", "Texto"), new { @class = "DDLClass" }) <br />
                            <input type="submit" name="cargar" id="cargar" value="Preguntar" class="btnClassS" />
                        }
                    </div>

                    <div class="col-md-8" style="padding-left: 6rem;">
                        <div class="galeria">
                            @{
                                foreach (Personaje personaje in ViewBag.Personajes)
                                {
                                    <a href='@Url.Action("RiskS", "Game", new { idPersonaje = personaje.Id })'><img src="@personaje.Direccion" /></a>
                                }
                            }
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>
    







