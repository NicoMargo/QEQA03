@using QEQ.Models;
@model Usuario
<h2>Configuracion</h2>
<span style="color:red">@ViewBag.Estado</span>
    @using (@Html.BeginForm("ModificarUsu", "BackOffice", FormMethod.Post))
    {
        <form method="post" action="@Url.Action("ModificarUsu","Usuario")">
            Nuevo Username:    @Html.TextBoxFor(x => x.Username) @Html.ValidationMessageFor(x => x.Username) <br />
            Nuevo Nombre:      @Html.TextBoxFor(x => x.Nombre) @Html.ValidationMessageFor(x => x.Nombre) <br />
            Nuevo Contraseña:  @Html.PasswordFor(x => x.Pass) @Html.ValidationMessageFor(x => x.Pass) <br />
            Nuevo Email:       @Html.TextBoxFor(x => x.Email) @Html.ValidationMessageFor(x => x.Email)<br />
            contraseña actual: <input type="password" name="PassVieja" required /><br />
            <input type="submit" value="Modificar Perfil" />
        </form>
        <form method="post" action="@Url.Action("Index","BackOffice")">
            <input type="submit" value="Volver al Inicio" />
        </form>
    }



