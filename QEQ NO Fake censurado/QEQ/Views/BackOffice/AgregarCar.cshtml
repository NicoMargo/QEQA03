
@{
    ViewBag.Title = "AgregarCar";
}

@using QEQ.Models
@model QEQ.Models.Preg
    <div class="container" style="background-color: white;margin-top: 5rem; padding-top: 4rem; border: solid 2px black">
       <div class="row">
           <div class="col-md-4 col-md-offset-4">

               <h3 style="margin-bottom:4rem;">Agregar una Caracteristica</h3>

               @using (Html.BeginForm("AgregarCar", "BackOffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
               {
                   <div class="form-group">
                       @Html.Label("Texto") @Html.TextBoxFor(P => P.Texto, new { @required = "required", @class = "form-control" }) <br />
                   </div>

                   <div class="form-group">

                       @Html.Label("Grupo") @Html.DropDownListFor(P => P.idGrupo, new SelectList(ViewBag.Grupos, "Id", "Nombre"), new { @class = "form-control" }) <br />
                   </div>

                   <div class="form-group">

                       @Html.Label("Puntos")@Html.TextBoxFor(P => P.Puntos, new { @type = "number", max = "1500", min = "0", @required = "required", @class = "form-control" }) <br />
                       <input type="submit" class="form-control" value="Proceder" />
                   </div>

               }
           </div>

           </div>
       </div>
         

