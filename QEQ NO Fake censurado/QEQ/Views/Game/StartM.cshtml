
@{
    ViewBag.Title = "Creando Partida";
}

@using (Html.BeginForm("StartM", "Game", FormMethod.Post))
{
    <div class="container" style="margin-top: 10rem; margin-bottom: 36rem;">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h2 class="panel-title"><b>Elige la categoria de tu personaje!</b> </h2>
            </div>
            <div class="panel-body">
                @Html.DropDownList("idCategoria", new SelectList(ViewBag.Cats, "Id", "Nombre"), new { @class = "btn btn-primary" }) <br />
                <input type="submit" name="cargar" value="Empezar" class="btnClassS" />
            </div>
        </div>

    </div>
}

