@using Microsoft.AspNet.Identity
<style type="text/css">

    * {
        margin: 0px;
        padding: 0px;
    }

    #header {
        margin: auto;
        width: 500px;
        font-family: Arial, Helvetica, sans-serif;
    }

    ul, ol {
        list-style: none;
    }

    .nav > li {
        float: left;
    }

    .nav li a {
        background-color: #000;
        color: #fff;
        text-decoration: none;
        padding: 10px 12px;
        display: block;
    }

        .nav li a:hover {
            background-color: #434343;
        }

    .nav li ul {
        display: none;
        position: absolute;
        min-width: 140px;
    }

    .nav li:hover > ul {
        display: block;
    }

    .nav li ul li {
        position: relative;
    }

        .nav li ul li ul {
            right: -140px;
            top: 0px;
        }
</style>
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else if (Session["Usu"] == null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "Register", "BackOffice", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar Sesion", "LogIn", "BackOffice", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
} else
{
 <ul class="nav navbar-nav navbar-right">        
     <li>  <a href=""> Bienvenido</a>
         <ul>
             <li>@Html.ActionLink("Cerrar Sesion", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" }) </li>
             <li>@Html.ActionLink("Configuracion", "ModificarUsu", "BackOffice", routeValues: null, htmlAttributes: new { id = "loginLink" }) </li>
         </ul>
     </li>
    </ul>

}
