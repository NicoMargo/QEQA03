@using QEQ.Models
@model QEQ.Models.Personaje
@{
    ViewBag.Title = "JuegoPrincipalS";
}


<p>@BD.laPartida.Puntos</p>

@using (Html.BeginForm("AskS", "Game", FormMethod.Post))
{
    @Html.Label("Seleccione que quiere preguntar para adivinar mi personaje")<br />
    @Html.DropDownList("idpreg", new SelectList(ViewBag.Preg, "Id", "Texto")) <br />
<input type="submit" name="cargar" value="Preguntar" />
}

@{
    foreach (Personaje personaje in ViewBag.Personajes)
    {
<a href='@Url.Action("RiskS", "Game", new { idPersonaje = personaje.Id } )'><img class="img-responsive" src="@personaje.Direccion" width="135" /></a>
    }
}
@{
    if (ViewBag.Estado)
    {
        <script type="text/javascript">alert('Ya no puedes preguntar mas. Tenes que arriesgar')</script>
    }
}


