@using QEQ.Models
@{
    ViewBag.Title = "ABMCat";
}

<h2>Menu ABM de Categorias</h2>
@Html.ActionLink("Agregar una nueva categoria", "AgregarCat", "BackOffice"); <br />
<table border="1" align="center">
    <tr>
        <td>categoria</td>
        <td>Modificar</td>
        <td>Borrar</td>
    </tr>
    @foreach (Cat Categoria in ViewBag.Categorias)
    {
        <tr>
            <td>@Html.Label(Categoria.Nombre)</td>
            <td>@Html.ActionLink("Modificar", "ModificarCat", "BackOffice", new { Id = Categoria.Id })</td>
            <td>@Html.ActionLink("Borrar", "BorrarCat", "BackOffice", new { Cat = Categoria.Id })</td>
        </tr>
    }
</table>
<table border="1" align="center">
    <tr>
        <td>Grupo</td>
        <td>Modificar</td>
        <td>Borrar</td>
    </tr>
    @foreach (Cat Grupo in ViewBag.Grupos)
    {
        <tr>
            <td>@Html.Label(Grupo.Nombre)</td>
            <td>@Html.ActionLink("Modificar", "ModificarCat", "BackOffice", new { Id = Grupo.Id });</td>
            <td>@Html.ActionLink("Borrar", "BorrarCat", "BackOffice", new { Id = Grupo.Id });</td>
        </tr>
    }
</table>
@Html.ActionLink("Volver al BackOffice Index", "Index", "BackOffice"); <br />